<Window x:Class="TinkerWorX.SharpCraft.DebuggerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SharpCraft (debugger)" Height="900" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="OutputTextBox" FontFamily="Lucida Console" IsReadOnly="True" IsReadOnlyCaretVisible="False" Grid.Row="0"/>
        <TextBox x:Name="InputTextBox" FontFamily="Lucida Console" Grid.Row="1" PreviewKeyDown="InputTextBox_PreviewKeyDown" IsEnabled="False"/>
    </Grid>
</Window>
